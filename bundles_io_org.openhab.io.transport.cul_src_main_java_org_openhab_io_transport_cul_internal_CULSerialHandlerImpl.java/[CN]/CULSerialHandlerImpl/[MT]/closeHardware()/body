{
  log.debug("Closing serial device " + deviceName);
  if (serialPort != null) {
    serialPort.removeEventListener();
  }
  try {
    if (br != null) {
      br.close();
    }
    if (bw != null) {
      bw.close();
    }
  }
 catch (  IOException e) {
    log.error("Can't close the input and output streams propberly",e);
  }
 finally {
    if (serialPort != null) {
      serialPort.close();
    }
  }
}
