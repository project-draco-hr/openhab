{
  if (healNodes == null)   healNodes=new HashMap<Integer,HealNode>();
  ZWaveNode node=zController.getNode(nodeId);
  if (node == null) {
    logger.error("NODE {}: DEAD node - can't be found.",nodeId);
    return false;
  }
  HealNode heal=new HealNode();
  heal.node=node;
  heal.nodeId=nodeId;
  heal.retryCnt=0;
  heal.routeList=null;
  heal.state=HealState.WAITING;
  heal.lastChange=Calendar.getInstance().getTime();
  if (node.isListening())   heal.listening=true;
 else   heal.listening=false;
  healNodes.put(nodeId,heal);
  networkHealNextTime=0;
  return true;
}
