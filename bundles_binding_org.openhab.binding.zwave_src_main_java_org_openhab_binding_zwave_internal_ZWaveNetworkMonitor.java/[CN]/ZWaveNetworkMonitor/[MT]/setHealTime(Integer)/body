{
  if (time == null)   networkHealNightlyHour=-1;
 else   networkHealNightlyHour=time;
  if (networkHealNightlyHour > 23)   networkHealNightlyHour=-1;
  if (networkHealNightlyHour < 0)   networkHealNightlyHour=-1;
  if (initialised == false)   return;
  networkHealNightlyTime=calculateNextHeal();
  networkHealNextTime=networkHealNightlyTime;
}
