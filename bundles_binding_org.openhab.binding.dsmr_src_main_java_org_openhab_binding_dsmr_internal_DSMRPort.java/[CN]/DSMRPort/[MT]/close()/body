{
synchronized (portLock) {
    logger.info("Closing DSMR port");
    messages.clear();
    isOpen=false;
    if (bis != null) {
      try {
        bis.close();
      }
 catch (      IOException ioe) {
        logger.debug("Failed to close reader",ioe);
      }
    }
    if (serialPort != null) {
      serialPort.close();
    }
    bis=null;
    serialPort=null;
  }
}
