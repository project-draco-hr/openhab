{
  if (!(item instanceof StringItem) && !(item instanceof SwitchItem) && !(item instanceof DimmerItem)&& !(item instanceof NumberItem)) {
    throw new BindingConfigParseException("item '" + item.getName() + "' is of type '"+ item.getClass().getSimpleName()+ "', but only String, Number, Switch or Dimmer items are allowed.");
  }
}
