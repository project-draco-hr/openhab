{
  logger.debug("Validate item type for item {}",item.getName());
  if (!(item instanceof NumberItem || item instanceof SwitchItem || item instanceof ContactItem|| item instanceof StringItem|| item instanceof DateTimeItem)) {
    throw new BindingConfigParseException("Item '" + item.getName() + "' is of type '"+ item.getClass().getSimpleName()+ "', only NumberItems, SwitchItems, ContactItems, DateTimeItem or StringItem are allowed - please check your *.items configuration");
  }
}
