{
  logger.info("Broken connection found for '{}', attempting to reconnect...",key);
  try {
    host.login();
  }
 catch (  Exception e) {
    logger.debug(e.toString() + " : " + e.getCause().toString());
    logger.info("Reconnect failed for '{}', will retry in {}s",key,refreshInterval / 1000);
  }
}
