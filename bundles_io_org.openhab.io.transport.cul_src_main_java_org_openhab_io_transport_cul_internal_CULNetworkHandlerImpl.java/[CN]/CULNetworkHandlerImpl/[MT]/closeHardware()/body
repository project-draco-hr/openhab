{
  receiveThread.interrupt();
  log.debug("Closing network device " + deviceName);
  try {
    if (br != null) {
      br.close();
    }
    if (bw != null) {
      bw.close();
    }
  }
 catch (  IOException e) {
    log.error("Can't close the input and output streams propberly",e);
  }
 finally {
    if (socket != null) {
      try {
        socket.close();
      }
 catch (      IOException e) {
        log.error("Can't close the socket propberly",e);
      }
    }
  }
}
