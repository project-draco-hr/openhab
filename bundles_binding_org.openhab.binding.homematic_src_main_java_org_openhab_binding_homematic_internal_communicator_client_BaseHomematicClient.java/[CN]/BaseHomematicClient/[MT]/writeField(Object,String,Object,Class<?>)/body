{
  if (value == null) {
    throw new IllegalArgumentException("Field " + fieldName + " is required for target "+ target.getClass().getSimpleName());
  }
  if (type.getName().equals(value.getClass().getName())) {
    FieldUtils.writeField(target,fieldName,value,true);
  }
 else {
    throw new IllegalArgumentException("Value '" + value + "' ("+ value.getClass().getName()+ ") is not from type ("+ type.getName()+ ") in fieldName '"+ fieldName+ "' of class '"+ target.getClass().getName()+ "'");
  }
}
