{
  new Thread(){
    public void run(){
      try {
        player.play();
      }
 catch (      Exception e) {
        throw new RuntimeException(e.getMessage());
      }
 finally {
        if (shoutCastSocket != null) {
          try {
            shoutCastSocket.close();
          }
 catch (          IOException e) {
          }
        }
      }
    }
  }
.start();
}
