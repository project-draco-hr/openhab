{
  if (cachePath == null) {
    cachePath=System.getProperty("user.home") + "/nikobus.cache";
    log.info("No cache path specified. Defaulting to {}",cachePath);
  }
  path=cachePath;
  properties=new Properties();
  try {
    File f=new File(path);
    if (f.exists()) {
      properties.load(new FileInputStream(f));
    }
 else {
      f.createNewFile();
    }
  }
 catch (  Exception e) {
    log.error("Error reading/creating Nikobus cache file {}.  Commands will NOT be persisted! : {}",cachePath,e.getMessage());
    path=null;
  }
}
