{
  if (!(item instanceof SwitchItem || item instanceof DimmerItem || item instanceof StringItem|| item instanceof NumberItem)) {
    throw new BindingConfigParseException("item '" + item.getName() + "' is of type '"+ item.getClass().getSimpleName()+ "', only Switch-, Dimmer-, String- and NumberItems are allowed - please check your *.items configuration");
  }
}
