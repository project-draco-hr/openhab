{
  if (command instanceof OnOffType) {
    if (((OnOffType)command) == OnOffType.ON)     messageHandler.sendSetTemperature(bindingConfig.getDevAddr(),SetTemperatureMsg.TEMPERATURE_ON);
 else     if (((OnOffType)command) == OnOffType.OFF)     messageHandler.sendSetTemperature(bindingConfig.getDevAddr(),SetTemperatureMsg.TEMPERATURE_OFF);
  }
 else   if (command instanceof DecimalType) {
    messageHandler.sendSetTemperature(bindingConfig.getDevAddr(),((DecimalType)command).doubleValue());
  }
}
