{
  StringBuilder sb=new StringBuilder(message);
  if (line != -1) {
    sb.append("; line ");
    sb.append(line);
  }
  if (column != -1) {
    sb.append(", column ");
    sb.append(column);
  }
  if (length != -1) {
    sb.append(", length ");
    sb.append(length);
  }
  return sb.toString();
}
