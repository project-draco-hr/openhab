{
  if (socket == null) {
    logger.debug("Heatmiser disconnected: Performing reconnect");
    try {
      doConnect();
    }
 catch (    IOException e) {
      logger.error("Error reconnecting Heatmiser");
    }
  }
  if (socket == null)   return;
  connectionStateCount++;
  try {
    out.write(data);
    out.flush();
  }
 catch (  IOException e) {
    logger.error("HEATMISER: Error sending message " + e.getMessage());
    disconnect();
  }
}
