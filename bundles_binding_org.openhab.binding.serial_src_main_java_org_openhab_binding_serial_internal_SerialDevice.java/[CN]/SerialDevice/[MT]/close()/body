{
  serialPort.removeEventListener();
  try {
    inputStream.close();
  }
 catch (  IOException e) {
    logger.warn("Error closing serial port " + port,e);
  }
  try {
    outputStream.close();
  }
 catch (  IOException e) {
    logger.warn("Error closing serial port " + port,e);
  }
  serialPort.close();
}
