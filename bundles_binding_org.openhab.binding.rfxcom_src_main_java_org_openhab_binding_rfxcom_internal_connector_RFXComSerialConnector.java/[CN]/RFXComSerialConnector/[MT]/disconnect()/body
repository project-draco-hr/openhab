{
  logger.debug("Disconnecting");
  if (readerThread != null) {
    logger.debug("Interrupt serial listener");
    readerThread.interrupt();
  }
  logger.debug("Close serial streams");
  try {
    if (out != null) {
      out.close();
    }
    if (in != null) {
      in.close();
    }
  }
 catch (  IOException e) {
  }
  if (serialPort != null) {
    logger.debug("Close serial port");
    serialPort.close();
  }
  readerThread=null;
  serialPort=null;
  out=null;
  in=null;
  logger.debug("Closed");
}
