{
  try {
    Scheduler sched=StdSchedulerFactory.getDefaultScheduler();
    JobDetail job=newJob(RefreshJob.class).withIdentity(REFRESH_JOB_KEY).build();
    SimpleTrigger trigger=newTrigger().withIdentity(REFRESH_TRIGGER_KEY).withSchedule(repeatSecondlyForever(refreshInterval)).build();
    sched.scheduleJob(job,trigger);
    logger.debug("Scheduled refresh job '{}' in DefaulScheduler",job.getKey());
  }
 catch (  SchedulerException e) {
    logger.warn("Could not schedule refresh job: {}",e.getMessage());
  }
}
