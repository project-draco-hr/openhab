{
  if (!isConnected())   return;
  try {
    listener.setInterrupted(true);
    clientSocket.close();
    logger.info("Squeeze Server connection stopped.");
  }
 catch (  IOException e) {
    logger.error("Failed to disconnect from Squeeze Server at " + host + ":"+ cliPort,e);
  }
 finally {
    clientSocket=null;
    listener=null;
  }
}
