{
  if (buttonChangedButtonNum == buttonNum) {
    if (switchState == OnOffValue.OFF) {
      setSwitchState(OnOffValue.ON);
      logger.debug("set switch state on");
    }
 else     if (switchState == OnOffValue.ON) {
      setSwitchState(OnOffValue.OFF);
      logger.debug("set switch state on");
    }
 else {
      setSwitchState(OnOffValue.ON);
      logger.debug("set switch state on");
    }
  }
}
