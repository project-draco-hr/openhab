{
  if (udpReceivePort <= 0)   throw new IllegalArgumentException("Invalid udpReceivePort: " + udpReceivePort);
  if (udpSendPort <= 0)   throw new IllegalArgumentException("Invalid udpSendPort: " + udpSendPort);
  if (ipAddress == null || ipAddress.isEmpty())   throw new IllegalArgumentException("Missing ipAddress.");
  this.ip=ipAddress;
  this.receivePort=udpReceivePort;
  this.sendPort=udpSendPort;
}
