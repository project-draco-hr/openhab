{
  if (initialized)   return true;
  boolean p=pingDB();
  if (p) {
    return (p && !(conf.getErrReconnectThreshold() > 0 && errCnt <= conf.getErrReconnectThreshold()));
  }
 else {
    return (pingDB() && !(conf.getErrReconnectThreshold() > 0 && errCnt <= conf.getErrReconnectThreshold()));
  }
}
