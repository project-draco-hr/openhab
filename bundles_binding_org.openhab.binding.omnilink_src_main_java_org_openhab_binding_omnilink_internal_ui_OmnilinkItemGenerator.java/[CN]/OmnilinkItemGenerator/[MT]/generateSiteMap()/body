    output.append("}\nFrame label=\"All Lights\"{\n");
    for (    SiteItem l : units) {
      output.append(String.format("Slider item=%s_Switch switchSupport\n",l.getName()));
    }
    output.append("}\n}\n");
  }
  if (lights.size() > 0) {
    output.append("Text label=\"Other\" {\n");
