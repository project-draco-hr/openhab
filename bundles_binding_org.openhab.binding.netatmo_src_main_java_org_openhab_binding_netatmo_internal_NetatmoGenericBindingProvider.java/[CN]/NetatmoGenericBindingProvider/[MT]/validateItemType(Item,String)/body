{
  if (!(item instanceof NumberItem || item instanceof DateTimeItem || item instanceof LocationItem|| item instanceof StringItem)) {
    throw new BindingConfigParseException("item '" + item.getName() + "' is of type '"+ item.getClass().getSimpleName()+ "', only NumberItems, DateTimeItems, StringItems and LocationItems are allowed - please check your *.items configuration");
  }
}
