{
  List<PilightBindingConfig> configs=new ArrayList<PilightBindingConfig>();
  for (  Entry<String,BindingConfig> entry : bindingConfigs.entrySet()) {
    PilightBindingConfig config=(PilightBindingConfig)entry.getValue();
    if (config.getInstance().equals(instance) && config.getLocation().equals(location) && config.getDevice().equals(device))     configs.add(config);
  }
  return configs;
}
