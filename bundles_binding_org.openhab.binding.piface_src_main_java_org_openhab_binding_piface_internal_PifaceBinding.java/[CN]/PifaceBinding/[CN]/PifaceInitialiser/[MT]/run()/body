{
  while (!interrupted) {
    if (pifacePinsToInitialise.size() > 0) {
      ArrayList<PifacePin> clonedList=new ArrayList<PifacePin>(pifacePinsToInitialise);
      initialisePifacePins(clonedList);
    }
    try {
      sleep(1000L);
    }
 catch (    InterruptedException e) {
      interrupted=true;
    }
  }
}
