{
  try {
    if (connection == null)     connection=new TCPMasterConnection(InetAddress.getByName(host));
  }
 catch (  UnknownHostException e) {
    connection=null;
    return;
  }
  if (!connection.isConnected())   try {
    connection.setPort(port);
    connection.connect();
    transaction.setConnection(connection);
    transaction.setReconnecting(false);
  }
 catch (  Exception e) {
    logger.debug("ModbusSlave: Error connecting to master: " + e.getMessage());
    return;
  }
}
