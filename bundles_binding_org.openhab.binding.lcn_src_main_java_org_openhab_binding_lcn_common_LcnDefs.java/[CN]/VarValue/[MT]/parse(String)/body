{
switch (input.toUpperCase()) {
case "SECONDS":
case "SECOND":
case "SEC":
case "S":
    return SECONDS;
case "MINUTES":
case "MINUTE":
case "MIN":
case "M":
  return MINUTES;
case "HOURS":
case "HOUR":
case "H":
return HOURS;
case "DAYS":
case "DAY":
case "D":
return DAYS;
}
throw new IllegalArgumentException();
}
