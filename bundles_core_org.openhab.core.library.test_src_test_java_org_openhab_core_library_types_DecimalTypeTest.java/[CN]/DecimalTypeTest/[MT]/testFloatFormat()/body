{
  DecimalType dt;
  final char sep=(new DecimalFormatSymbols().getDecimalSeparator());
  dt=new DecimalType("11.123");
  assertEquals("11" + sep + "1",dt.format("%.1f"));
  dt=new DecimalType("11");
  assertEquals("11" + sep + "0",dt.format("%.1f"));
  dt=new DecimalType("11.0");
  assertEquals("11" + sep + "0",dt.format("%.1f"));
}
