{
  if (digitalSTROMApartmentStructureObserver != null) {
    digitalSTROMApartmentStructureObserver.setShutdown(true);
  }
  if (apartmentConsumptionThread != null) {
    apartmentConsumptionThread.setShutdown(true);
  }
