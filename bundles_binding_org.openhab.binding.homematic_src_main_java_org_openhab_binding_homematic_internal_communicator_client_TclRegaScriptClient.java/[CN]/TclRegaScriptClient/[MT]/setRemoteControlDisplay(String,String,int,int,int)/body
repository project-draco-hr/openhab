{
  HmResult result=sendScriptByName("setRemoteControl",HmResult.class,new String[]{"remote_address","text_value","unit_value","backlight_value","beep_value"},new String[]{remoteDisplayAddress,text,String.valueOf(unit),String.valueOf(backlight),String.valueOf(beep)});
  if (!result.isValid()) {
    throw new CcuClientException("Failed to set RemoteControl with address " + remoteDisplayAddress);
  }
}
