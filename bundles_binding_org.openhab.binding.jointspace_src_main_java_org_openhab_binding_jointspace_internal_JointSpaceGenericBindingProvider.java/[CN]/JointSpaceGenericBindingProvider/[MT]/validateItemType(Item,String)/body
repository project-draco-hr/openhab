{
  if (!(item instanceof SwitchItem || item instanceof DimmerItem || item instanceof ColorItem|| item instanceof NumberItem)) {
    throw new BindingConfigParseException("item '" + item.getName() + "' is of type '"+ item.getClass().getSimpleName()+ "', only Switch-, Color- and DimmerItems are allowed - please check your *.items configuration");
  }
}
