{
  HashMap<InsteonAddress,ModemDBEntry> dbes=port.getDriver().lockModemDBEntries();
  ModemDBEntry dbe=dbes.get(linkAddr);
  if (dbe == null) {
    dbe=new ModemDBEntry(linkAddr);
    dbes.put(linkAddr,dbe);
  }
  dbe.setPort(port);
  if (m != null) {
    dbe.addLinkRecord(m);
  }
  port.getDriver().unlockModemDBEntries();
}
