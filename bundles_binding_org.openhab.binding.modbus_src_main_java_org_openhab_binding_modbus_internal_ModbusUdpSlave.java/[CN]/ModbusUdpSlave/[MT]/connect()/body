{
  try {
    if (connection == null)     connection=new UDPMasterConnection(InetAddress.getByName(getHost()));
  }
 catch (  UnknownHostException e) {
    logger.debug("ModbusSlave: Error connecting to master: " + e.getMessage());
    connection=null;
    return false;
  }
  if (!connection.isConnected())   try {
    connection.setPort(getPort());
    connection.connect();
    ((ModbusUDPTransaction)transaction).setTerminal(connection.getTerminal());
  }
 catch (  Exception e) {
    logger.debug("ModbusSlave: Error connecting to master: " + e.getMessage());
    return false;
  }
  return true;
}
