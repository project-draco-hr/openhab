{
  boolean force=full || (failures != 0) && ((failures % FORCE_FULL_POLL) == 0);
  MiosUnit unit=connector.getUnit();
  if (!force && loadTime != null && dataVersion != null) {
    AsyncHttpClientConfig c=client.getConfig();
    int t=Math.min(c.getIdleConnectionTimeoutInMs(),c.getRequestTimeoutInMs()) / 1000 / 3;
    return String.format(Locale.US,STATUS2_INCREMENTAL_URL,unit.getHostname(),unit.getPort(),loadTime,dataVersion,new Integer(t));
  }
 else {
    return String.format(Locale.US,STATUS2_URL,unit.getHostname(),unit.getPort());
  }
}
